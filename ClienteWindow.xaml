<Window x:Class="SpaceSistemas.ClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceSistemas"
        mc:Ignorable="d"
        Title="ClienteWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="10">
            <TextBlock FontSize="36" >Cadastro de Clientes</TextBlock>

            <Label Content="Nome Completo" FontSize="20"/>

            <TextBox FontSize="26" Padding="10" x:Name="txtBoxNome" />

            <Label Content="Endereço" FontSize="20"/>

            <TextBox FontSize="26" Padding="10" x:Name="txtBoxEndereco" />

            <Button Margin="0 10" FontSize="28">Salvar</Button>
        </StackPanel>

    </Grid>
</Window>
